.answer-title {
  position: relative;
  background: #298DE5;
  padding: 35rpx;
  height: 200rpx;
  color: #fff;
}
.answer-title>text {
  display: block;
  width: 100%;
  height: 95rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.answer-title .user-info {
  position: absolute;
  top: 180rpx;
  left: 0;
  right: 0;
  border: 2rpx solid #eee;
  box-sizing: border-box;
  width: 90%;
  margin-left: 5%;
  border-radius: 10rpx;
  box-shadow:0 0 10rpx #eee;
  background: #fff;
  padding: 15rpx; 
}
.answer-title .user-info .user-info-left {
  float: left;
  padding: 10rpx; 
}
.answer-title .user-info .user-info-left image {
  display: inline-block;
  vertical-align: middle;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.answer-title .user-info .user {
  display: inline-block;
  vertical-align: middle;
  margin-left: 15rpx;
}
.user .user-name {
  font-size: 28rpx;
   color: #000;
   display: block;
   line-height: 1.5;
}
.user .user-content {
  display: block;
  font-size: 20rpx;
  color: #808080;
  width: 304rpx;
}
.answer-title .user-info .user-info-right {
  float: right; 
  margin-left: 80rpx;
  margin-top: 16rpx;
}
.answer-title .user-info .user-info-right .attention {
  display: block;
  border: 4rpx solid #40BCD0;
  color: #40BCD0;
  font-size: 22rpx;
  padding: 15rpx 20rpx;
}
.answer-content {
  padding: 120rpx 40rpx 107rpx 40rpx;
}
.answer-content image {
  width: 100%;
}
.answer-footer {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 10rpx 10rpx 10rpx #eee;
  height: 92rpx;
  font-size: 18rpx;
  color: #7E7E7E;
  padding-top: 10rpx;
}
.answer-footer .good-bad {
  display: inline-block;
  width: 108rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  padding: 15rpx 20rpx;
  vertical-align: middle;
  margin: 0 45rpx;
  text-align: center;
}
.answer-footer .good-bad image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}
.answer-footer .good-bad text {
  vertical-align: middle;
}
.answer-footer .footer-item {
  display: inline-block;
  vertical-align: middle;
  margin-left: 50rpx;
  text-align: center;
}
.answer-footer .footer-item image {
  display: block;
  width: 55rpx;
  height: 55rpx;
}